{
  "manifest_version": 3,
  "name": "Crypto Market Cap Tracker",
  "version": "1.0",
  "description": "Monitor top 10 cryptocurrencies by market cap, with dark mode, search, and price alerts",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.coingecko.com/*"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
